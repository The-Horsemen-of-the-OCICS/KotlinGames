<resources>
    <style name="BoldTitleStyle" parent="">
        <item name="android:fontFamily">@font/myriadprobold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldSubtitleStyle" parent="BoldTitleStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BoldContentStyle" parent="BoldTitleStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LargeButtonStyle" parent="">
        <item name="android:fontFamily">@font/myriadprobold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/pink</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="fontFamily">@font/myriadprobold</item>
        <item name="android:textSize"> 15sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@drawable/radio_button_text_selector</item>
        <item name="android:buttonTint">@color/chip_backgroud_color_selector</item>
        <item name="android:gravity">top</item>
    </style>


</resources>