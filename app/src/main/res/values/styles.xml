<resources>
    <style name="BoldTitleStyle" parent="">
        <item name="android:fontFamily">@font/myriadprobold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldSubtitleStyle" parent="BoldTitleStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BoldContentStyle" parent="BoldTitleStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LargeButtonStyle" parent="">
        <item name="android:fontFamily">@font/myriadprobold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/pink</item>
    </style>

</resources>